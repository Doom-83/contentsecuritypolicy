{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "BuildAll",
            "dependsOrder": "sequence",
            "dependsOn": [
                "build",
                "copy"
            ],
            "problemMatcher": []
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Sample/DemoSite/DemoSite.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "copy",
            "command": "cp",
            "type": "shell",
            "args": [
                "-R",
                "'${workspaceFolder}/src/Jhoose.Security/dist/Jhoose.Security'",
                "'${workspaceFolder}/src/Sample/DemoSite/modules/_protected'"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/Test/Management/EpiserverAdmin.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/src/Sample/DemoSite/DemoSite.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}